export enum Theme { light, dark }

export struct Palette {
    bg-primary: color,
    bg-secondary: color,
    bg-header: color,
    bg-center: color,
    bg-statusbar: color,
    border-color: color,
    text-primary: color,
    text-secondary: color,
    text-tertiary: color,
    text-danger: color,

    // Semantic colors
    text-success: color,
    text-info: color,
    text-warning: color,
    bg-success: color,
    bg-info: color,
    bg-warning: color,
    bg-danger: color,
}

export global Style {

    // Padding
    out property <length> p-window: 3px;
    out property <length> p-header: 3px;
    out property <length> p-pane: 0px;

    // Height
    out property <length> h-header: 30px;

    // Spacing
    out property <length> sp-header: 8px;
    out property <length> sp-content: 8px;

    private property <Palette> palette-light: {
        // Theme colors (will be set by states)
        bg-primary: #fafafa,
        bg-secondary: #f5f5f5,
        bg-header: #e8e8e8,
        bg-center: #ffffff,
        bg-statusbar: #f0f0f0,
        border-color: #ddd,
        text-primary: #000,
        text-secondary: #666,
        text-tertiary: #999,
        text-danger: #d00,

        // Semantic colors
        text-success: #0f5132,
        text-info: #055160,
        text-warning: #664d03,
        bg-success: #d1e7dd,
        bg-info: #cff4fc,
        bg-warning: #fff3cd,
        bg-danger: #f8d7da,
    };

    private property <Palette> palette-dark: {
        bg-primary: #2a2a2a,
        bg-secondary: #1e1e1e,
        bg-header: #333333,
        bg-center: #252525,
        bg-statusbar: #1a1a1a,
        border-color: #444,
        text-primary: #ffffff,
        text-secondary: #cccccc,
        text-tertiary: #888888,
        text-danger: #ff6b6b,
        text-success: #75b798,
        text-info: #6edff6,
        text-warning: #ffda6a,
        bg-success: #0f5132,
        bg-info: #055160,
        bg-warning: #664d03,
        bg-danger: #842029,
    };

    public pure function set-palette(t: Theme) -> Palette {
        if(t == Theme.dark) {
            return Style.palette-dark;
        } else {
            return Style.palette-light;
        }
    }
}